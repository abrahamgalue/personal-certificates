---
import IconSearch from '@/components/icons/IconSearch.astro'
import IconX from '@/components/icons/IconX.astro'
import IconTrash from '@/components/icons/IconTrash.astro'

export interface Props {
  allInstitutions: string[]
}

const { allInstitutions } = Astro.props
---

<div class="filter-container">
  <div class="search-section">
    <div class="search-wrapper">
      <IconSearch />
      <input
        type="text"
        id="searchInput"
        placeholder="Buscar certificados por nombre, institución, tipo..."
        class="search-input"
      />
      <button id="clearSearch" class="clear-search-btn" style="display: none;">
        <IconX />
      </button>
    </div>
  </div>

  <div class="filter-section">
    <div class="filter-group">
      <p class="filter-label">Filtrar por institución:</p>
      <div class="filter-buttons">
        <button
          class="filter-btn active"
          data-filter="all"
          data-type="institution"
        >
          Todos
        </button>
        {
          allInstitutions.map((institution) => (
            <button
              class="filter-btn"
              data-filter={institution.toLowerCase()}
              data-type="institution"
            >
              {institution}
            </button>
          ))
        }
      </div>
    </div>
  </div>

  <div class="results-info">
    <span id="resultsCount">0 certificados encontrados</span>
    <button id="clearAllFilters" class="clear-all-btn">
      <IconTrash />
      Limpiar Filtros
    </button>
  </div>
</div>

<style>
  .filter-container {
    backdrop-filter: blur(10px);
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    border-radius: 16px;
    border: 1px solid #334155;
    margin-bottom: 2rem;
    padding: 2rem;
  }

  .search-section {
    margin-bottom: 1.5rem;
  }

  .search-wrapper {
    align-items: center;
    display: flex;
    position: relative;
  }

  .search-input {
    background: rgba(15, 23, 42, 0.8);
    border-radius: 12px;
    border: 2px solid #334155;
    color: #f1f5f9;
    font-size: 1rem;
    outline: none;
    padding: 1rem 1rem 1rem 3rem;
    width: 100%;
  }

  .search-input::placeholder {
    color: #64748b;
  }

  .search-input:focus {
    background: rgba(15, 23, 42, 1);
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .clear-search-btn {
    background: none;
    border-radius: 4px;
    border: none;
    color: #64748b;
    cursor: pointer;
    padding: 0.25rem;
    position: absolute;
    right: 1rem;
  }

  .clear-search-btn:hover {
    color: #f87171;
    background: rgba(248, 113, 113, 0.1);
  }

  .filter-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .filter-label {
    color: #cbd5e1;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: capitalize;
  }

  .filter-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .filter-btn {
    background: rgba(30, 41, 59, 0.5);
    border-radius: 8px;
    border: 2px solid #334155;
    color: #94a3b8;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    white-space: nowrap;
  }

  .filter-btn:hover {
    background: rgba(59, 130, 246, 0.1);
    border-color: #3b82f6;
    color: #bfdbfe;
  }

  .filter-btn.active {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    border-color: #2563eb;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    color: white;
  }

  .results-info {
    align-items: center;
    border-top: 1px solid #334155;
    display: flex;
    justify-content: space-between;
    padding-top: 1.5rem;
  }

  #resultsCount {
    color: #cbd5e1;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .clear-all-btn {
    align-items: center;
    background: rgba(248, 113, 113, 0.1);
    border-radius: 8px;
    border: 1px solid rgba(248, 113, 113, 0.3);
    color: #f87171;
    cursor: pointer;
    display: flex;
    font-size: 0.875rem;
    font-weight: 500;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
  }

  .clear-all-btn:hover {
    background: rgba(248, 113, 113, 0.2);
    border-color: #f87171;
  }

  @media (width <= 768px) {
    .filter-container {
      padding: 1.5rem;
      position: relative;
      top: 0;
    }

    .filter-section {
      gap: 1rem;
    }

    .filter-buttons {
      gap: 0.375rem;
    }

    .filter-btn {
      font-size: 0.8rem;
      padding: 0.375rem 0.75rem;
    }

    .results-info {
      align-items: stretch;
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
